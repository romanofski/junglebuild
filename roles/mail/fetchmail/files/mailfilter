import PATH
DEFAULT="$HOME/Maildir"

logfile "$HOME/maildrop.log"

if (/^(From|To):.*@gnome.org/:h)
{
  to "| notmuch-deliver -c -t list -r inbox $DEFAULT/gimp-list"
}

# Handle spam
if (/^From: messages-noreply@linkedin.com/:h)
{
  to "| notmuch-deliver -c -t spam -r inbox"
}

to  "| notmuch-deliver -t inbox -v"